	xmlns:mvcs="robotlegs.bender.bundles.mvcs.*"
	xmlns:rl2="http://ns.robotlegs.org/flex/rl2"
	xmlns:todo="robotlegs.bender.demos.todo.*"
	xmlns:views="robotlegs.bender.demos.todo.views.*"
    backgroundColor="0xDEDEDE"
	>

	<fx:Declarations>
		<rl2:ContextBuilder>
			<mvcs:MVCSBundle/>
			<todo:TodoConfig/>
		</rl2:ContextBuilder>
	</fx:Declarations>

	<s:Scroller 
